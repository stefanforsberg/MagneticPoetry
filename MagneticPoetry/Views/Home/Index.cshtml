            #magnetic-area {
                width: 800px;
                height: 500px;
                border: solid 1px #989898;
                position: absolute;
                left: 0px;
                top: 0px;
            }
            
            .word {
                padding: 5px;
                border: solid 1px #bababa;
                position: absolute;
                float: left;
                cursor: move;
                background-color: #f3f3f3;
                
            }
            
            .occupied {
                background-color: #C7DD7F;
                cursor: none;
            }
           
        </style>    

        
